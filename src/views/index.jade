html
    head
        title Archiver
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
        link(rel="stylesheet", href="https://bootswatch.com/flatly/bootstrap.min.css")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")

    body(style="padding: 70px 20px 0")
        .container
            nav.navbar.navbar-default.navbar-fixed-top
                .container
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Archiver
                    #navbar-main.collapse.navbar-collapse
                        form.navbar-form.navbar-left(action="/search", method="post")
                            .form-group
                                input.form-control(type="search", placeholder="search", name="search", value=search)
        
            - if (documents)
                table.table.table-striped
                    thead
                        th
                        th Name
                        th Date
                        th Content
                        th Open
                    tbody
                        each document in documents
                            tr
                                td
                                    a(href="/delete/"+document._id, target="_blanck", onclick="return confirm('Are you sure to delete this document ?')")
                                        i.fa.fa-trash
                                td
                                    - if (document.name.length > 50)
                                        =document.name.substring(0, 47)+"..."
                                    - else
                                        =document.name
                                td=moment(document.dateCreation).format("DD/MM/YYYY, HH:mm")
                                td=document.content.substring(0, 50)+"..."
                                td.text-center
                                    a(href="/download/"+document._id)
                                        i.fa.fa-file-pdf-o
            - else
                div No documents found

            include ./mixins/pagination
            +pagination(start, numPages, curr, base)
             
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
